---
import Layout from '~/layouts/PageLayout.astro';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';

const metadata = {
  title: 'Levers in the Cloud — Honest Reviews of Business Tools',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="Honest Reviews for Smart Business Decisions"
    actions={[
      {
        variant: 'primary',
        text: 'Browse Reviews',
        href: '/blog',
        icon: 'tabler:arrow-right',
      },
      {
        variant: 'secondary',
        text: 'Learn More',
        href: '/about',
      },
    ]}
  >
    <Fragment slot="title">
      Find Business Tools <br />
      <span class="text-accent highlight">That Actually Work</span>
    </Fragment>

    <Fragment slot="subtitle">
      We review business software and SaaS platforms that consistently earn excellent customer reviews.  
      No fluff, no hype—just honest insights to help you choose the right tools for your business.  
      <br />
      The 'Levers In The Cloud team works to demonstrate how modern software are levers that enable each of us to move the world forward.  
      <br />
    </Fragment>
  </Hero>

  <!-- Features Widget *************** -->

  <Features
    id="features"
    tagline="Our Approach"
    title="Why Trust Our Reviews?"
    subtitle="We focus on tools that real businesses love"
    items={[
      {
        title: 'Real User Data',
        description: 'We analyze thousands of verified customer reviews from platforms like G2, Capterra, and Trustpilot.',
        icon: 'tabler:chart-bar',
      },
      {
        title: 'Hands-On Testing',
        description: 'Every tool we review has been tested in real business scenarios, not just surface-level demos.',
        icon: 'tabler:click',
      },
      {
        title: 'Honest Comparisons',
        description: 'We highlight both strengths and weaknesses, plus alternatives so you can make informed decisions.',
        icon: 'tabler:scale',
      },
      {
        title: 'Transparent Affiliates',
        description: 'We may earn commissions on some links, but our reviews stay honest and unbiased.',
        icon: 'tabler:heart',
      },
    ]}
  />

  <!-- Latest Blog Posts Widget ******* -->

  <BlogLatestPosts
    title="Latest Tool Reviews"
    information={`Discover our latest reviews of business software and SaaS platforms. We test tools thoroughly and provide honest insights to help you make informed decisions for your business.`}
  />

</Layout>
