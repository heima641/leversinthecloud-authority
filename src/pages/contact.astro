---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contact - Levers in the Cloud',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    tagline="Get in Touch" 
    title="Have Questions About Business Software?" 
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Contact Information"
    subtitle="Have a question about a software review?  
      <br />
      Want to suggest a tool we should evaluate?  
      <br />
      We'd love to hear from you.  
      <br />
      <br />
      <strong>The 'Levers In The Cloud' team works to demonstrate how modern cloud software platforms are levers that enable each of us to move the world forward.</strong>"
    items={[
      {
        title: 'Email Us',
        description: 'team@leversinthecloud.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Our Focus',
        description: 'We review business software and SaaS platforms to help small and medium businesses make informed purchasing decisions based on verified customer reviews and hands-on testing.',
        icon: 'tabler:target',
      },
      {
        title: 'Response Time',
        description: 'We typically respond to inquiries within 1-2 business days.',
        icon: 'tabler:clock',
      },
      {
        title: 'Location',
        description: 'Based in Maine, USA',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
